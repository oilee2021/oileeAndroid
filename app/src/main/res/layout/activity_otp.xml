<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:layout_marginTop="?attr/actionBarSize"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/we_sent_you_message"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/gordita_regular"/>

            <TextView
                android:id="@+id/otp_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gordita_regular"
                android:layout_marginTop="15dp"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:text="@string/six_digit_code_on"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp">

                <EditText
                    android:id="@+id/otp_1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/gordita_regular"
                    android:layout_marginStart="5dp"
                    android:textSize="14sp"
                    android:inputType="number"
                    android:paddingStart="17dp"
                    android:paddingEnd="17dp"
                    android:hint="0"
                    android:background="@drawable/background_selector_otp"/>

                <EditText
                    android:id="@+id/otp_2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/gordita_regular"
                    android:layout_marginStart="5dp"
                    android:textSize="14sp"
                    android:inputType="number"
                    android:paddingStart="17dp"
                    android:paddingEnd="17dp"
                    android:hint="0"
                    android:background="@drawable/background_selector_otp"/>

                <EditText
                    android:id="@+id/otp_3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/gordita_regular"
                    android:layout_marginStart="5dp"
                    android:textSize="14sp"
                    android:inputType="number"
                    android:paddingStart="17dp"
                    android:paddingEnd="17dp"
                    android:hint="0"
                    android:background="@drawable/background_selector_otp"/>

                <EditText
                    android:id="@+id/otp_4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/gordita_regular"
                    android:layout_marginStart="5dp"
                    android:textSize="14sp"
                    android:inputType="number"
                    android:paddingStart="17dp"
                    android:paddingEnd="17dp"
                    android:hint="0"
                    android:background="@drawable/background_selector_otp"/>

                <EditText
                    android:id="@+id/otp_5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/gordita_regular"
                    android:layout_marginStart="5dp"
                    android:textSize="14sp"
                    android:inputType="number"
                    android:paddingStart="17dp"
                    android:paddingEnd="17dp"
                    android:hint="0"
                    android:background="@drawable/background_selector_otp"/>

                <EditText
                    android:id="@+id/otp_6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/gordita_regular"
                    android:layout_marginStart="5dp"
                    android:textSize="14sp"
                    android:inputType="number"
                    android:paddingStart="17dp"
                    android:paddingEnd="17dp"
                    android:hint="0"
                    android:background="@drawable/background_selector_otp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/otp_resend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/otp_resend_text"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="15dp"
                android:textSize="14sp"
                android:fontFamily="@font/gordita_regular"/>

            <Button
                style="@style/AppTheme.SubmitButton"
                android:id="@+id/otp_submit"
                android:layout_marginTop="30dp"
                android:enabled="false"
                android:text="@string/Continue"/>
        </LinearLayout>
    </LinearLayout>
</layout>