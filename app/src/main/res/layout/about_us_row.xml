<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_about_us_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <TextView
                android:id="@+id/tv_about_us_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textSize="12sp"
                android:layout_toStartOf="@id/iv_see_more"
                android:maxLines="1"
                android:layout_marginEnd="5dp"
                android:ellipsize="end"
                android:textColor="@color/lightBlack"
                android:fontFamily="@font/gordita_medium"
                tools:text="Shubham Mathur"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/iv_see_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add"
                android:tint="@color/lightBlack"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_about_us_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginBottom="15dp"
            android:textColor="@color/lightBlack"
            android:fontFamily="@font/gordita_regular"
            tools:text="description of the title"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGrey"/>
    </LinearLayout>
</layout>