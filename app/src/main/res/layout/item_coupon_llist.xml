<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <RelativeLayout
            android:id="@+id/main_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <TextView
                android:id="@+id/text_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/apply"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/text_coupon_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="FFEB21"
                android:layout_centerVertical="true"
                android:textColor="@color/lightBlack"
                android:textSize="14sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/background_coupon_code"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/text_coupon_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="10% Discount"
                android:layout_centerVertical="true"
                android:textColor="@color/colorBlack"
                android:layout_toEndOf="@id/text_coupon_code"
                android:layout_marginStart="20dp"
                android:textSize="14sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>