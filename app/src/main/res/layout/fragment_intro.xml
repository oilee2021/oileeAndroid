<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/image_intro"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            tools:src="@drawable/customer_intro_image_4"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_above="@id/text_intro_header"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/text_intro_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Request &amp; Watch!"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_above="@id/text_intro_text"
            android:fontFamily="@font/gordita_medium"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/text_intro_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Request your service and we'll keep you updated with a real-time map view of your technician's location!"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/gordita_regular"
            android:textColor="@color/colorBlack" />
    </RelativeLayout>
</layout>